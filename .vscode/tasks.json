{
    "version": "2.0.0",
    "linux": {
        "options": {
            "shell": {
                "executable": "bash",
                "args": [
                    "--init-file",
                    ".venv/bin/activate",
                    "-ci",
                ]
            }
        },
    },
    "tasks": [
        {
            "label": "Docker up",
            "type": "shell",
            "command": "docker compose -f docker/development.yml --env-file ./.docker-env -p bunqynab up --build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Traefik up",
            "type": "shell",
            "command": "docker compose -f docker/traefik.yml --env-file ./.docker-env -p traefik up",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build: Docker",
            "type": "shell",
            "command": "docker buildx build --platform linux/arm64 -t test2 .",
            "options": {
                "cwd": "${workspaceFolder}/docker"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint: Ruff",
            "type": "shell",
            "command": "ruff check",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}
